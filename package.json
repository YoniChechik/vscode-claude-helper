{
  "name": "git-diff-viewer",
  "displayName": "Git Diff Viewer",
  "description": "Compare git changes across branches, worktrees, and commits with a clean tree view",
  "version": "0.6.0",
  "publisher": "YoniChechik",
  "author": {
    "name": "Yoni Chechik"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoniChechik/vscode-git-diff-extension"
  },
  "bugs": {
    "url": "https://github.com/YoniChechik/vscode-git-diff-extension/issues"
  },
  "homepage": "https://github.com/YoniChechik/vscode-git-diff-extension#readme",
  "keywords": [
    "git",
    "diff",
    "compare",
    "branches",
    "worktree",
    "source control"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitDiffContainer",
          "title": "Git Diff",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "gitDiffContainer": [
        {
          "id": "gitDiffExplorer",
          "name": "Changes",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "gitDiffExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gitDiffExplorer.openDiff",
        "title": "Open Diff"
      },
      {
        "command": "gitDiffExplorer.changeComparisonTarget",
        "title": "Change Comparison Target",
        "icon": "$(git-compare)"
      },
      {
        "command": "gitDiffExplorer.toggleViewMode",
        "title": "Toggle View as Tree / List",
        "icon": "$(list-tree)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitDiffExplorer.refresh",
          "when": "view == gitDiffExplorer",
          "group": "navigation"
        },
        {
          "command": "gitDiffExplorer.toggleViewMode",
          "when": "view == gitDiffExplorer",
          "group": "navigation"
        },
        {
          "command": "gitDiffExplorer.changeComparisonTarget",
          "when": "view == gitDiffExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
