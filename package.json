{
  "name": "git-changes-view",
  "displayName": "Git Changes View",
  "description": "Live-updating tree view of changed files compared to origin/main",
  "version": "2.0.2",
  "publisher": "YoniChechik",
  "author": {
    "name": "Yoni Chechik"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoniChechik/vscode-claude-helper"
  },
  "bugs": {
    "url": "https://github.com/YoniChechik/vscode-claude-helper/issues"
  },
  "homepage": "https://github.com/YoniChechik/vscode-claude-helper#readme",
  "keywords": [
    "git",
    "diff",
    "changes",
    "tree"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitChanges",
          "title": "Git Changes",
          "icon": "$(git-compare)"
        }
      ]
    },
    "views": {
      "gitChanges": [
        {
          "id": "gitChangesView",
          "name": "Changes vs origin/main",
          "icon": "$(git-compare)",
          "contextualTitle": "Git Changes"
        }
      ]
    },
    "commands": [
      {
        "command": "git-changes.showLogs",
        "title": "Git Changes: Show Logs"
      },
      {
        "command": "git-changes.refresh",
        "title": "Git Changes: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "git-changes.openDiff",
        "title": "Open Diff"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-changes.refresh",
          "when": "view == gitChangesView",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "./scripts/publish.sh"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.28.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "typescript": "^4.9.3"
  }
}
